<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/backg1"
    >


    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="280dp"
        android:layout_height="86dp"
        android:layout_marginTop="188dp"
        android:backgroundTint="#00FFFFFF"
        android:backgroundTintMode="add"
        android:drawableBottom="@color/white"
        android:ems="10"
        android:hint="Input number"
        android:inputType="phone"
        android:shadowColor="#00E30A0A"
        android:textColor="#FFFFFF"
        android:textColorHint="#E1D5D5"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="109dp"
        android:layout_height="64dp"
        android:layout_marginStart="151dp"
        android:layout_marginEnd="151dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:backgroundTintMode="add"
        android:hapticFeedbackEnabled="true"
        android:onClick="lookUp"
        android:text="Lookup"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="303dp"
        android:layout_height="66dp"
        android:text="Sync Contacts to SMS"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="303dp"
        android:layout_height="66dp"
        android:layout_marginBottom="76dp"
        android:text="Show ID of new callers"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>